@model PD324_01.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <div class="row">
        <div class="form-group" style="width: 50%">
            @if (!string.IsNullOrEmpty(@Model.Image))
            {
                <div style="margin-left: 10px;">
                    <img src="@Url.Content(@Model.Image)" alt="Current Image" style="max-width: 200px;" />
                </div>
            }
        </div class="form-group" style="width: 50%">
        <div>
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p><strong>Category:</strong> @Model.Category?.Name</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary m-2">Back</a>
        </div>
    </div>
</div>
