@model Product

<h1>Delete product</h1>

<form method="post" asp-controller="Product" asp-action="Delete">
    <div class="form-group">
        <label asp-for="Name" class="m-1">Name</label>
        <input disabled asp-for="Name" class="form-control m-1" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label asp-for="Price" class="m-1">Price</label>
        <input disabled asp-for="Price" class="form-control m-1" placeholder="Enter price">
    </div>
    <button type="submit" class="btn btn-primary m-2">Delete</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary m-2">Back</a>
</form>